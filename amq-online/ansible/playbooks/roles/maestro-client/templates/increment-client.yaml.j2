apiVersion: v1
kind: Pod
metadata:
  name: maestro-client
spec:
  restartPolicy: Never
  affinity:
    nodeAffinity:
      preferredDuringSchedulingIgnoredDuringExecution:
        - weight: 1
          preference:
            matchExpressions:
              - key: nodetype
                operator: In
                values:
                  - maestroperf
  containers:
    - name: client
      image: maestroperf/maestro-client:1.5.3
      command:
        - /bin/bash
        - -c
        - /opt/maestro/maestro-cli/bin/maestro-cli exec -s ${TEST_CASE}
      env:
        - name: MAESTRO_BROKER
          value: mqtt://broker
        - name: SEND_RECEIVE_URL
          valueFrom:
            configMapKeyRef:
              name: {{ item.name }}
              key: sendReceiveUrl
              optional: true
        - name: SEND_URL
          valueFrom:
            configMapKeyRef:
              name: {{ item.name }}
              key: sendUrl
              optional: true
        - name: RECEIVE_URL
          valueFrom:
            configMapKeyRef:
              name: {{ item.name }}
              key: receiveUrl
              optional: true
        - name: MESSAGE_SIZE
          valueFrom:
            configMapKeyRef:
              name: {{ item.name }}
              key: messageSize
              optional: true
        - name: RATE
          valueFrom:
            configMapKeyRef:
              name: {{ item.name }}
              key: rate
              optional: true
        - name: TEST_DURATION
          valueFrom:
            configMapKeyRef:
              name: {{ item.name }}
              key: testDuration
              optional: true
        - name: TEST_DESCRIPTION
          valueFrom:
            configMapKeyRef:
              name: {{ item.name }}
              key: testDescription
              optional: true
        - name: TEST_COMMENT
          valueFrom:
            configMapKeyRef:
              name: {{ item.name }}
              key: testComment
              optional: true
        - name: PARALLEL_COUNT
          valueFrom:
            configMapKeyRef:
              name: {{ item.name }}
              key: parallelCount
              optional: true
        - name: DISTRIBUTION_STRATEGY
          valueFrom:
            configMapKeyRef:
              name: {{ item.name }}
              key: distributionStrategy
              optional: true
        - name: LOG_LEVEL
          valueFrom:
            configMapKeyRef:
              name: {{ item.name }}
              key: logLevel
              optional: true
        - name: INSPECTOR_NAME
          valueFrom:
            configMapKeyRef:
              name: {{ item.name }}
              key: inspectorName
              optional: true
        - name: MANAGEMENT_INTERFACE
          valueFrom:
            configMapKeyRef:
              name: {{ item.name }}
              key: managementInterface
              optional: true
        - name: ENDPOINT_RESOLVER_NAME
          valueFrom:
            configMapKeyRef:
              name: {{ item.name }}
              key: endpointResolverName
              optional: true
        - name: TEST_CASE
          valueFrom:
            configMapKeyRef:
              name: {{ item.name }}
              key: testCase
        - name: INITIAL_RATE
          valueFrom:
            configMapKeyRef:
              name: {{ item.name }}
              key: initialRate 
        - name: CEILING_RATE	
          valueFrom:
            configMapKeyRef:
              name: {{ item.name }}
              key: ceilingRate 
        - name: RATE_INCREMENT
          valueFrom: 
            configMapKeyRef:
              name: {{ item.name }}
              key: rateIncrement 
        - name: INITIAL_PARALLEL_COUNT
          valueFrom:
            configMapKeyRef:
              name: {{ item.name }}
              key: initalParallelCount 
        - name: CEILING_PARALLEL_COUNT
          valueFrom:
            configMapKeyRef:
              name: {{ item.name }}
              key: ceilingParallelCount 
        - name: PARALLEL_COUNT_INCREMENT
          valueFrom:
            configMapKeyRef:
              name: {{ item.name }}
              key: parallelCountIncrement 
        - name: MAXIMUM_LATENCY
          valueFrom:
            configMapKeyRef:
              name: {{ item.name }}
              key: maxLatency
      volumeMounts:
        - mountPath: /opt/maestro/maestro-cli/scripts
          name: config
        - mountPath: /test-scripts
          name: test-scripts
  volumes:
    - name: config
      configMap:
        name: {{ item.name }}
    - name: test-scripts
      configMap:
        name: test-scripts
